@model Notes;
@{
    Layout = null;
}

@* Delete page for notes *@
<form asp-controller="Home" asp-action="DeleteNote" method="post">

    <div class="modal-header">
        <div class="modal-title">Delete Note</div>
    </div>

    <div class="modal-body">
        <div>
            <input asp-for="NoteId" hidden />
        </div>
        <div>
            <span>Do you want to delete this note @Model.Title?</span>
        </div>
    </div>

    <div class="modal-footer footer">
        <button type="submit" class="button deletenotes">Delete</button>
        <a asp-controller="Home" asp-action="Index" class="button back">Back</a>
    </div>
</form>

<style>
    input {
        border-radius: 10px;
    }

    div {
        margin-bottom: 10px;
    }

    .button {
        text-decoration: none;
        width: 70px;
        display: inline-flex;
        justify-content: center;
        align-content: center;
        border-radius: 5px;
        border: none;
        height: 30px;
    }

    .footer {
        display: flex;
        justify-content: space-between;
    }

    .back {
        color: black;
        background-color: rgba(255,255,255,0.9);
        border: 0.1px solid black;
    }

        .back:hover {
            color: black;
            background-color: rgba(255,255,255,0.1);
            transform: scale(1.05);
        }

    .deletenotes {
        background-color: rgba(255,0,0,0.7);
        color: white;
    }

        .deletenotes:hover {
            background-color: rgba(255,0,0,0.9);
            color: white;
            transform: scale(1.05);
        }

</style>